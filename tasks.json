{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Run PHPUnit Tests",
          "type": "shell",
          "command": "vendor/bin/phpunit",
          "args": [
              "./tests/LoginTest.php",
              "--colors=always"
          ],
          "group": {
              "kind": "test",
              "isDefault": true
          },
          "problemMatcher": ["$phpunit"],
          "detail": "Runs PHPUnit tests"
      },
      {
          "label": "Composer Install",
          "type": "shell",
          "command": "composer",
          "args": [
              "install"
          ],
          "group": "build",
          "problemMatcher": []
      }
  ]
}
